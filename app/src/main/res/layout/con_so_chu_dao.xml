<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/than_so_hoc"
        tools:context=".ConSoChuDao"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ngay_sinh"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="Ngày sinh"
            android:paddingStart="20dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="200dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/thang_sinh"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="Tháng sinh"
            android:paddingStart="20dp"
            android:layout_marginStart="230dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/nam_sinh"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="Năm sinh"
            android:paddingStart="20dp"
            android:layout_marginStart="230dp"
            tools:ignore="RtlSymmetry"  />

        <Button
            android:id="@+id/button_xem_ket_qua"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button_xem_ket_qua"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</layout>
